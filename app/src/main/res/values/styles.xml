<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#8BC34A</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#8BC34A</item>
    </style>

    <!-- Style for the player Name textViews -->
    <style name="playerNameTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/xsmall_dimen</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style for labels textViews in the central Vertical Layout-->
    <style name="labelsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/xsmall_dimen</item>
        <item name="android:layout_marginRight">@dimen/xsmall_dimen</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style for the larger textView for Points - Portrait -->
    <style name="largeInfoTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/xsmall_dimen</item>
        <item name="android:layout_marginLeft">@dimen/large_dimen</item>
        <item name="android:layout_marginRight">@dimen/large_dimen</item>
        <item name="android:layout_marginTop">@dimen/xsmall_dimen</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style for the larger textView for Points - Landscape -->
    <style name="largeInfoTextViewStyleLandscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/xsmall_dimen</item>
        <item name="android:layout_marginLeft">@dimen/large_dimen</item>
        <item name="android:layout_marginRight">@dimen/large_dimen</item>
        <item name="android:layout_marginTop">@dimen/xsmall_dimen</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style for the smaller textView for games, set, aces -->
    <style name="smallInfoTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/xsmall_dimen</item>
        <item name="android:layout_marginLeft">@dimen/X_large_dimen</item>
        <item name="android:layout_marginRight">@dimen/X_large_dimen</item>
        <item name="android:layout_marginTop">@dimen/xsmall_dimen</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style for the bigger buttons -->
    <style name="LargeButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/xsmall_dimen</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">@dimen/xsmall_dimen</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style for the small plus buttons -->
    <style name="plusButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <!-- Style for the vertical lines to separate groupViews -->
    <style name="vLineStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color100</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">@dimen/small_dimen</item>
    </style>

</resources>
